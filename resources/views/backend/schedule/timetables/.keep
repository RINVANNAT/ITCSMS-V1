    {{--timetable assignment--}}
    <script type="text/javascript">
        var get_timetable_assignment = $('#display-assign').DataTable({
            processing: true,
            serverSide: true,
            ajax: {
                url: '{!! route('get_timetable_assignment') !!}',
                method: 'POST',
                data: {
                    _token: '{{ csrf_token() }}'
                }
            },
            columns: [
                {data: 'code', name: 'code', searchable: true},
                {data: 'start', name: 'start', searchable: false, orderable: false},
                {data: 'end', name: 'end', searchable: false, orderable: false},
                {data: 'status', name: 'status', searchable: false, orderable: true},
                {data: 'action', name: 'action', searchable: false, orderable: false}
            ]
        });

        $(function () {
            get_timetable_assignment.draw();

            $('#start').datetimepicker({
                format: 'YYYY-MM-DD'
            });
            $('#end').datetimepicker({
                format: 'YYYY-MM-DD'
            });

            $('select[name="departments[]"]').select2({
                placeholder: 'Chose Department'
            });

            $(document).on('click', '#btn_update_assign', function () {
                $('#display-assign').find('.info').removeClass();
                var dom = $(this).parent().parent().addClass('info');
                $('#modal-update-assign').modal('show');
                $('#update-start').datetimepicker({
                    format: 'YYYY-MM-DD',
                    date: dom.children().eq(1).text()
                });
                $('#update-end').datetimepicker({
                    format: 'YYYY-MM-DD',
                    date: dom.children().eq(2).text()
                });
            });

            // update timetable assignment
            $(document).on('click', '#btn_form_update_assign', function (e) {
                e.preventDefault();
                var department_name = $('#display-assign').find('.info').children().eq(0).text();
                $.ajax({
                    type: 'POST',
                    url: '{!! route('assign.update') !!}',
                    data: {
                        department_name: department_name,
                        start: $('input[name="update-start"]').val(),
                        end: $('input[name="update-end"]').val()
                    },
                    success: function (response) {
                        $('#modal-update-assign').modal('hide');
                        $('#update-form-assign')[0].reset();

                        if (response.status === true) {
                            get_timetable_assignment.draw();
                        } else {
                            notify('error', 'Something went wrong.', 'Update Timetable Assignment');
                        }
                    },
                    error: function () {
                        notify('error', 'Something went wrong.', 'Update Timetable Assignment');
                    },
                    complete: function () {
                        notify('info', 'Timetable assignment already updated.', 'Update Timetable Assignment');
                    }
                });
            });

            // set permission timetable assignment
            $(document).on('click', '#btn_assign', function (event) {
                event.preventDefault();
                $.ajax({
                    type: 'POST',
                    url: '{!! route('assign_turn_create_timetable') !!}',
                    data: {
                        start: $('input[name="start"]').val(),
                        end: $('input[name="end"]').val(),
                        departments: $('select[name="departments[]"]').val()
                    },
                    success: function (response) {
                        if (response.status === true) {
                            $('#modal-timetable-assignment').modal('toggle');
                            notify('info', response.message, 'Successfully');
                            $('#form-assign').trigger('reset');
                        }
                        if (response.status === false) {
                            notify('error', response.message, 'Oops...');
                        }
                    },
                    error: function () {
                        notify('error', 'Something went wrong.', 'Oops...');
                    },
                    complete: function () {
                        $('#form-assign').trigger('reset');
                        get_timetable_assignment.draw();
                    }
                })
            });
        });
    </script>

